<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.form.WelcomeActivity">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_survey_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Ungkapkan keluhan anda dengan memilih gejala-gejala yang tersedia"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_survey"
        app:layout_constraintEnd_toEndOf="@+id/iv_survey"
        app:layout_constraintStart_toStartOf="@+id/iv_survey"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_survey_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_regular"
        android:text="Anda bisa melewati, memilih satu atau lebih dari keluhan yang tersedia."
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_margin="32dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_survey"
        app:layout_constraintStart_toStartOf="@+id/iv_survey"
        app:layout_constraintTop_toBottomOf="@+id/iv_survey" />


    <ImageView
        android:id="@+id/iv_survey"
        android:layout_width="315dp"
        android:layout_height="219dp"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/survey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_shape"
        android:text="LANJUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>